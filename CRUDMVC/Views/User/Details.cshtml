@{
    ViewData["Title"] = "Details";
}

@model CRUDMVC.Models.AppUser

<div class="card p-4" style="width:50%; margin:auto;">
    <h1 class="text-center">User Details</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" asp-for="Id" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input class="form-control" type="text" asp-for="Phone" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">City</label>
            <input class="form-control" type="text" asp-for="City" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Companies</label>
            <div class="company-card">
                @if (Model.Companies != null && Model.Companies.Any())
                {
                    <ul>
                        @foreach (var company in Model.Companies)
                        {
                            <li>@company.CompanyName</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No Companies</span>
                }
            </div>
        </div>
        <div class="mt-3 text-center">
            <button class="btn btn-danger ms-2" asp-controller="User" asp-action="Delete" type="submit">Delete</button>
            <a class="btn btn-secondary ms-2" asp-controller="User" asp-action="List">Back To List</a>
        </div>
    </form>
</div>