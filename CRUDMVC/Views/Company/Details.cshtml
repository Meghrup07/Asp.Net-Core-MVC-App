@{
    ViewData["Title"] = "Details";
}

@model CRUDMVC.Models.Company


<div class="card p-4" style="width:50%; margin:auto;">
    <h1 class="text-center">Update Company</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" placeholder="Id" asp-for="Id" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label">Company Name</label>
            <input class="form-control" type="text" placeholder="Company name" asp-for="CompanyName" readonly>
            <span class="text-danger" asp-validation-for="CompanyName"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Company Description</label>
            <input class="form-control" type="text" placeholder="Company description" asp-for="CompanyDiscription"
                readonly>
        </div>
        <div class="mt-3 text-center">
            <button class="btn btn-danger ms-2" asp-controller="Company" asp-action="Delete"
                type="submit">Delete</button>
            <a class="btn btn-secondary ms-2" asp-controller="Company" asp-action="List">Back To List</a>
        </div>
    </form>
</div>