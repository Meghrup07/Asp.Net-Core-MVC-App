@{
    ViewData["Title"] = "Add";
}

@model CRUDMVC.DTOs.AddCompanyDTO

<div class="card p-4" style="width:50%; margin:auto;">
    <h1 class="text-center">Add Company</h1>
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Company Name</label>
            <input class="form-control" type="text" placeholder="Company name" asp-for="CompanyName">
            <span class="text-danger" asp-validation-for="CompanyName"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Company Description</label>
            <input class="form-control" type="text" placeholder="Company description" asp-for="CompanyDiscription">
        </div>
        <div class="mt-3">
            <label class="form-label">User</label>
            <select class="form-select" asp-for="UserId" asp-items="ViewBag.users">
                <option value="">Select User</option>
            </select>
            <span class="text-danger" asp-validation-for="UserId"></span>
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary">Add</button>
            <a class="btn btn-secondary ms-2" asp-controller="Company" asp-action="List">Back To List</a>
        </div>
    </form>
</div>